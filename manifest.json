{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0.2",
  "description": "__MSG_extDescription__",
  "default_locale": "hu",
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["slimselect.min.js", "content.js"],
      "css": ["slimselect.min.css", "custom-styles.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["slimselect.min.js", "slimselect.min.css", "custom-styles.css", "_locales/*/*.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
